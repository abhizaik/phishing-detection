{
  "manifest_version": 3,
  "name": "SafeSurf Phishing Checker",
  "version": "1.0",
  "description": "Check if a URL is potentially phishing.",
  "permissions": ["contextMenus", "tabs", "scripting", "storage"],
  "host_permissions": ["http://localhost:8080/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
